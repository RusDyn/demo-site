#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-commit checks..."

# 1. Check for debugging code
echo "ğŸ” Checking for debug code..."
if grep -r "console\.\(log\|debug\|trace\)" src/ --exclude="*.test.ts"; then
  echo "âŒ Found console statements. Please remove them."
  exit 1
fi

# 2. Check for TODO comments
if grep -r "TODO\|FIXME\|XXX" src/; then
  echo "âš ï¸  Found TODO comments. Consider addressing them."
fi

# 3. Run lint-staged
npx lint-staged

# 4. Verify no .only in tests
if grep -r "\.only\|\.skip" "src/**/*.test.ts" 2>/dev/null; then
  echo "âŒ Found .only or .skip in tests"
  exit 1
fi

echo "âœ… All checks passed!"