{
  "name": "claude-optimized-typescript-project",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "duplicates": "jscpd",
    "duplicates:html": "jscpd --reporters html",
    "quality": "npm run typecheck && npm run lint && npm run test && npm run duplicates",
    "quality:fix": "npm run typecheck && npm run lint:fix && npm run format",
    "prepare": "husky install",
    "claude": "claude",
    "clean": "rimraf dist coverage .tsbuildinfo",
    "audit": "npm audit --audit-level=moderate",
    "bundle-analyze": "vite-bundle-visualizer",
    "deploy:rollback": "echo 'Implement rollback script'",
    "emergency:config": "echo 'Implement emergency config'"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-sonarjs": "^1.0.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "husky": "^8.0.0",
    "jscpd": "^4.0.5",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vite-bundle-visualizer": "^0.10.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
